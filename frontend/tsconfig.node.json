{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ⭐ IMPORTANTE → Habilita @/ */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    /* Recomendações */
    "jsx": "react-jsx"
  },

  /* ⭐ IMPORTANTE → inclui tudo que o React precisa */
  "include": [
    "src",
    "vite-env.d.ts"
  ]
}

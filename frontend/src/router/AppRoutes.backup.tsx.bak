import { BrowserRouter, Routes, Route } from "react-router-dom";

/* Layouts */
import AppLayout from "@/layout/AppLayout";
import MainLayout from "@/layout/MainLayout";

/* Pessoas – Listagens */
import ClientesPage from "@/pages/pessoas/ClientesPage";
import ColaboradoresPage from "@/pages/pessoas/ColaboradoresPage";
